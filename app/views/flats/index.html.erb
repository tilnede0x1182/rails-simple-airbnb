<div class="container mt-4">
  <h1 class="text-center mb-4">Nos Appartements üè†</h1>

	<% if @flats.empty? %>
  <div class="alert alert-warning text-center">Aucun appartement ne correspond √† votre recherche.</div>
	<% end %>

  <!-- Formulaire de recherche -->
  <div class="mb-4 text-center">
    <%= form_with url: flats_path, method: :get, local: true, class: "d-inline-block w-50" do |f| %>
      <div class="input-group">
        <%= f.text_field :query, value: params[:query], class: "form-control", placeholder: "Rechercher un appartement..." %>
        <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Rechercher</button>
      </div>
    <% end %>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-lg">
          <img src="<%= flat.picture_url.presence || 'https://source.unsplash.com/featured/600x400/?house,apartment' %>" class="card-img-top" alt="<%= flat.name %>">
          <div class="card-body">
            <h5 class="card-title text-center"><%= flat.name %></h5>
            <p class="text-muted text-center"><i class="fas fa-map-marker-alt"></i> <%= flat.address %></p>
            <p class="text-center"><span class="badge bg-success"><%= flat.price_per_night %>‚Ç¨ / nuit</span></p>
            <div class="text-center">
              <%= link_to "Voir plus", flat_path(flat), class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
