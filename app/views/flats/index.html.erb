            <p class="text-muted text-center">
              <i class="fas fa-map-marker-alt"></i> <%= flat.address %>
            </p>
            <p class="text-center">
              <span class="badge bg-success"><%= flat.price_per_night %>‚Ç¨ / nuit</span>
            </p>
            <div class="text-center">
              <%= link_to "Voir plus", flat_path(flat), class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
