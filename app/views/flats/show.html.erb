<div class="container mt-4">
  <div class="card shadow-lg">
    <img src="<%= @flat.picture_url.presence || 'https://via.placeholder.com/600' %>" class="card-img-top" alt="<%= @flat.name %>">

    <div class="card-body">
      <h1 class="card-title text-center"><%= @flat.name %></h1>

      <div class="row">
        <div class="col-md-8">
          <p class="text-muted"><i class="fas fa-map-marker-alt"></i> <%= @flat.address %></p>
          <p><%= @flat.description %></p>
        </div>

        <div class="col-md-4 text-center">
          <p class="h4 text-success"><strong><%= @flat.price_per_night %>€ / nuit</strong></p>
          <p><i class="fas fa-users"></i> <%= @flat.number_of_guests %> voyageurs</p>
        </div>
      </div>
			<div class="d-flex justify-content-center gap-3 mt-4">
				<%= link_to "Modifier", edit_flat_path(@flat), class: "btn btn-warning btn-lg" %>
				<%= button_to "Supprimer", flat_path(@flat), method: :delete, data: { confirm: "Es-tu sûr ?" }, class: "btn btn-danger btn-lg" %>
				<%= link_to "Retour", flats_path, class: "btn btn-secondary btn-lg" %>
			</div>
    </div>
  </div>
</div>
